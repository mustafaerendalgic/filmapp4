<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detayekran"
    android:background="@color/basebgcolor">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/sahiplik"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/secmain"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/blurry"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@+id/posterdetay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/posterdetay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/renkgecis2" />

                <ImageView
                    android:id="@+id/posterdetay"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/posterdetay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/posterdetay"
                    app:srcCompat="@drawable/gradientlinearfrombottom" />

                <TextView
                    android:id="@+id/detayFilmismi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingStart="9dp"
                    android:text="TextView"
                    android:textColor="@color/buttoncolor"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/posterdetay"
                    app:layout_constraintEnd_toStartOf="@+id/yil"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/backbutton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/baseline_arrow_back_ios_new_24" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="12dp"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/posterdetay"
                    app:srcCompat="@drawable/imdb" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Konu"
                    android:textColor="@color/sarirenk"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tur"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttondetay"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/renkgecisbuton"
                    android:gravity="center"
                    android:text="Sepete Ekle"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    android:layout_marginEnd="12dp"
                    android:drawableEnd="@drawable/shopping2"
                    android:paddingEnd="18dp"
                    android:paddingStart="18dp"
                    app:layout_constraintBottom_toTopOf="@id/detayaciklama"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tur" />

                <TextView
                    android:id="@+id/fiyat"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Fiyat"
                    android:textColor="@color/buttoncolor"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tur"
                    app:layout_constraintBottom_toTopOf="@id/detayaciklama"
                    app:layout_constraintEnd_toStartOf="@id/buttondetay" />

                <TextView
                    android:id="@+id/detaypuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textColor="@color/buttoncolor"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toBottomOf="@id/posterdetay"/>

                <TextView
                    android:id="@+id/uzunluk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    app:layout_constraintStart_toEndOf="@+id/detaypuan"
                    app:layout_constraintTop_toBottomOf="@id/posterdetay" />

                <TextView
                    android:id="@+id/tur"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Tür"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/uzunluk"
                    app:layout_constraintTop_toBottomOf="@id/posterdetay" />

                <TextView
                    android:id="@+id/detayaciklama"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/buttoncolor"
                    android:textSize="17dp"

                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/yil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="TextView"
                    android:textColor="@color/buttoncolor"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/posterdetay"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/bunlarisevebilirsiniz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Benzer Filmler"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:textColor="@color/sarirenk"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detayaciklama"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/benzerrv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:paddingBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bunlarisevebilirsiniz" />

            </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>





    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sahiplik"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/mevcut"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/mevcut"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="BU ÜRÜNE SAHİPSİNİZ"
            android:textColor="@color/mevcut"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_check_circle_outline_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>